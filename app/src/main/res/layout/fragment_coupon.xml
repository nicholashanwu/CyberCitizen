<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorYellowDark"
    app:layout_constraintDimensionRatio="1:1"
    tools:context=".ui.achievements.CouponFragment">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:alpha="1"
        android:src="@drawable/hero_employee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabTokens"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTint="#FFFFFF"
        android:elevation="0dp"
        android:fontFamily="@font/quicksand_bold"
        android:outlineProvider="none"
        android:text="tokenCount"
        android:textColor="#FFFFFF"
        android:translationZ="0dp"
        app:backgroundTint="@color/transparent"
        app:elevation="0dp"
        app:icon="@drawable/ic_outline_fiber_smart_record_24"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pressedTranslationZ="0dp"
        app:rippleColor="@null" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="66dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Coupons"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="54dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="128dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="24dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Get achievements to get coupons!"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="16dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Amazon"
                            android:textColor="#FF444444"
                            android:textSize="20sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="$20 off your next purchase"
                            android:textColor="#AB000000" />

                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:id="@+id/rpbAmazon"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_gravity="bottom"
                            app:rcBackgroundColor="#0A000000"
                            app:rcMax="100"
                            app:rcProgress="50"
                            app:rcAnimationEnable="true"
                            app:rcAnimationSpeedScale="1"
                            app:rcProgressColors="@array/sample_progress_gradient"
                            app:rcRadius="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="2000 coins"
                            android:textColor="@color/colorYellowDark" />

                        <TextView
                            android:id="@+id/txtAmazon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="RAN_DOM_CODE"
                            android:visibility="visible" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="32dp"
                        android:clickable="true"
                        android:focusableInTouchMode="false"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="KFC"
                            android:textColor="#FF444444"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="Free Large Chips and Burger"
                            android:textColor="#AB000000" />

                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:id="@+id/rpbKfc"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_gravity="bottom"
                            app:rcBackgroundColor="#0A000000"
                            app:rcMax="100"
                            app:rcProgress="50"
                            app:rcAnimationEnable="true"
                            app:rcAnimationSpeedScale="1"
                            app:rcProgressColors="@array/sample_progress_gradient"
                            app:rcRadius="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="1000 coins"
                            android:textColor="@color/colorYellowDark" />

                        <TextView
                            android:id="@+id/txtKfc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="RAN_DOM_CODE"
                            android:visibility="visible" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="32dp"
                        android:clickable="true"
                        android:focusableInTouchMode="false"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="JB HiFi"
                            android:textColor="#FF444444"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="$15 off your next purchase"
                            android:textColor="#AB000000" />

                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:id="@+id/rpbJb"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_gravity="bottom"
                            app:rcBackgroundColor="#0A000000"
                            app:rcMax="100"
                            app:rcProgress="50"
                            app:rcAnimationEnable="true"
                            app:rcAnimationSpeedScale="1"
                            app:rcProgressColors="@array/sample_progress_gradient"
                            app:rcRadius="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="1500 coins"
                            android:textColor="@color/colorYellowDark" />

                        <TextView
                            android:id="@+id/txtJb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="RAN_DOM_CODE"
                            android:visibility="visible" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="32dp"
                        android:clickable="true"
                        android:focusableInTouchMode="false"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Myer"
                            android:textColor="#FF444444"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="$20 Myer Gift Card"
                            android:textColor="#AB000000" />

                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:id="@+id/rpbMyer"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_gravity="bottom"
                            app:rcBackgroundColor="#0A000000"
                            app:rcMax="100"
                            app:rcProgress="50"
                            app:rcAnimationEnable="true"
                            app:rcAnimationSpeedScale="1"
                            app:rcProgressColors="@array/sample_progress_gradient"
                            app:rcRadius="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="2000 coins"
                            android:textColor="@color/colorYellowDark" />

                        <TextView
                            android:id="@+id/txtMyer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="RAN_DOM_CODE"
                            android:visibility="visible" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="32dp"
                        android:clickable="true"
                        android:focusableInTouchMode="false"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Steam"
                            android:textColor="#FF444444"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="$15 Steam Gift Card"
                            android:textColor="#AB000000" />

                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:id="@+id/rpbSteam"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_gravity="bottom"
                            app:rcBackgroundColor="#0A000000"
                            app:rcMax="100"
                            app:rcProgress="50"
                            app:rcAnimationEnable="true"
                            app:rcAnimationSpeedScale="1"
                            app:rcProgressColors="@array/sample_progress_gradient"
                            app:rcRadius="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="1500 coins"
                            android:textColor="@color/colorYellowDark" />

                        <TextView
                            android:id="@+id/txtSteam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="RAN_DOM_CODE"
                            android:visibility="visible" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        android:focusableInTouchMode="false"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="Bunnings"
                            android:textColor="#FF444444"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="$30 Bunnings Gift Card"
                            android:textColor="#AB000000" />

                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:id="@+id/rpbBunnings"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_gravity="bottom"
                            app:rcBackgroundColor="#0A000000"
                            app:rcMax="100"
                            app:rcProgress="50"
                            app:rcAnimationEnable="true"
                            app:rcAnimationSpeedScale="1"
                            app:rcProgressColors="@array/sample_progress_gradient"
                            app:rcRadius="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="2000 coins"
                            android:textColor="@color/colorYellowDark" />

                        <TextView
                            android:id="@+id/txtBunnings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="RAN_DOM_CODE"
                            android:visibility="visible" />


                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>