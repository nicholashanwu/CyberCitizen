<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ProgressBar
        android:id="@+id/progressBarContent"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="64dp"
        android:elevation="16dp"
        android:progress="0"
        android:progressDrawable="@drawable/circle"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabContentDone"
        android:layout_width="67dp"
        android:layout_height="63dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@null"
        android:clickable="true"
        android:elevation="16dp"
        android:focusable="auto"
        android:src="@drawable/baseline_done_white_48"
        app:backgroundTint="@color/colorGreen"
        app:elevation="8dp"
        app:fabCustomSize="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBarContent"
        app:layout_constraintEnd_toEndOf="@+id/progressBarContent"
        app:layout_constraintStart_toStartOf="@+id/progressBarContent"
        app:layout_constraintTop_toTopOf="@+id/progressBarContent"
        app:rippleColor="#33FFFFFF"
        app:tint="#FFFFFF" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        android:fillViewport="true"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#673AB7">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/btnProfileImageHome"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:elevation="8dp"
                android:scaleType="centerCrop"
                app:riv_border_color="@color/colorGreen"
                app:riv_border_width="2dp"
                app:riv_corner_radius="30dip"
                app:riv_mutate_background="true"
                app:riv_oval="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtContentScrollerTitle"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Welcome To Cyber Citizen"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="48dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>